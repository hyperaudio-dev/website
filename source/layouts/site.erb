<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <title><%= current_page.data.title || "Hyperaudio" %></title>
    <%= stylesheet_link_tag "main" %>
    <%= javascript_include_tag  "main" %>
  </head>

  <body class="tpl_site <%= page_classes %>">
    <header class="header branded">
      <div class="container">

        <h1 class="header-brandmark">
          <a href="#" class="brandmark">
            <%= image_tag 'inserts/logo-hyperaudio.png', :class => "brandmark-symbol" %>
            <span class="brandmark-label">Hyperaudio</span>
          </a>
        </h1>

        <ul class="header-navigation">
          <li class="header-navigation-item"><a href="#">Tour</a></li>
          <li class="header-navigation-item"><a href="#">Case Studies</a></li>
          <li class="header-navigation-item"><a href="#">Try it</a></li>
          <li class="header-navigation-item"><a href="#" class="altered">Sign up</a></li>
          <li class="header-navigation-item header-login"><a href="#" class="button">Log in</a></li>
        </ul>

      </div>
    </header>
    <%= yield %>
    <footer class="footer">
      <div class="container">
        <div class="footer-navigation">
          <ul class="footer-nav-list">
            <li class="footer-navigation-item"><a href="#">Tour</a></li>
            <li class="footer-navigation-item"><a href="#">Blog</a></li>
            <li class="footer-navigation-item"><a href="#"><abbr title="Frequently Asked Questions">FAQ</abbr></a></li>
            <li class="footer-navigation-item"><a href="#">Contact</a></li>
            <li class="footer-navigation-item"><a href="#">Community</a></li>
            <li class="footer-navigation-item"><a href="#">Twitter</a></li>
          </ul>
        </div>
        <h1 class="footer-brandmark">
          <a href="#" class="brandmark">
            <%= image_tag 'inserts/logo-hyperaudio.png', :class => "brandmark-symbol" %>
            <span class="brandmark-label">Hyperaudio</span>
          </a>
        </h1>
      </div>
      <div class="container">
        <div class="footer-imprint">
          <p>Hyperaudio <abbr title="Incorporated">Inc</abbr>. is a non-profit producing Open Source software, established in Rhode Island, USA.</p>
          <p>&copy; 2012â€“2013 Hyperaudio Incorporated. All rights reserved.</p>
          <p><a href="#">Terms of Service</a> | <a href="#">Privacy Policy</a></p>
        </div>
      </div>
    </footer>
  </body>
</html>